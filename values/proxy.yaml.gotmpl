appName: stoat-proxy
image:
  repository: ghcr.io/stoatchat/proxy
  tag: {{ index (.Values.stoatImageOverrides | default dict) "proxy" | default .Values.stoatImageTag | quote }}

services:
  - name: http
    port: 14705
    targetPort: 14705

ingress:
  enabled: true
  path: /january/
  pathType: Prefix
  host: {{ .Values._common.ingress.host }}
  className: {{ .Values._common.ingress.className }}
  tlsSecret: {{ .Values._common.ingress.tlsSecret }}
  tlsIssuer: {{ .Values._common.ingress.tlsIssuer }}
